# Telegram Bot Token (da BotFather)
TELEGRAM_BOT_TOKEN=your_token_here

# LLM Provider: "gemini" (FREE, recommended) or "claude" (paid)
LLM_PROVIDER=gemini

# Gemini API Key (from Google AI Studio - FREE tier: 1500 req/day)
# Get your key at: https://aistudio.google.com/app/apikey
GOOGLE_API_KEY=your_google_api_key_here

# Claude API Key (optional fallback - paid)
# Only needed if LLM_PROVIDER=claude
CLAUDE_API_KEY=your_claude_api_key_here

# Database path
DATABASE_PATH=/data/adhd.db

# Optional settings
DAILY_PICKS_TIME=08:00
DECAY_DAYS=30
NOTIFICATION_ENABLED=true

# Dashboard URL (per link nelle notifiche)
DASHBOARD_URL=https://adhd.tuodominio.it

# Email Settings (Gmail SMTP)
# Per Gmail: usa una App Password, non la password normale
# Vai su https://myaccount.google.com/apppasswords
EMAIL_ENABLED=false
EMAIL_SMTP_HOST=smtp.gmail.com
EMAIL_SMTP_PORT=587
EMAIL_USERNAME=tuaemail@gmail.com
EMAIL_PASSWORD=your_app_password
EMAIL_FROM=tuaemail@gmail.com
EMAIL_TO=tuaemail@gmail.com
WEEKLY_DIGEST_TIME=08:00
WEEKLY_DIGEST_DAY=sat

# ===========================================
# PWA Authentication Settings
# ===========================================

# JWT Secret Key - CHANGE THIS IN PRODUCTION!
# Generate with: openssl rand -hex 32
JWT_SECRET_KEY=your-super-secret-key-at-least-32-characters

# Token expiration times
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=60
JWT_REFRESH_TOKEN_EXPIRE_DAYS=30

# ===========================================
# Push Notifications (VAPID Keys)
# ===========================================
# Generate VAPID keys with: npx web-push generate-vapid-keys
# Or: pip install pywebpush && python -c "from pywebpush import webpush; print(webpush.generate_vapid_keys())"
VAPID_PUBLIC_KEY=
VAPID_PRIVATE_KEY=
VAPID_CLAIMS_EMAIL=mailto:admin@example.com
